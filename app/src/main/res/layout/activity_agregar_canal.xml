<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustPan">



    <LinearLayout
        android:id="@+id/layout_ppal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:weightSum="100"
        android:clickable="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/canales_texto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Haga click en el canal para agregarlo"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            app:fontFamily="@font/carter_one" />




        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_canales_agregar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#ffffff"
            android:layout_weight="40"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"/>



        <Button
            android:id="@+id/crear_canal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginTop="20dp"
            android:text="Nuevo canal"
            android:textColor="@color/colorAzulLink"
            android:background="@color/colorBlanco"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_volverOrganizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="10"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Volver"
            android:textColor="@android:color/background_dark"
            />



    </LinearLayout>



</LinearLayout>