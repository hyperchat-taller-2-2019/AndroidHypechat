<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorNaranja" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorAzul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="80"
            android:layout_height="631dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:weightSum="100"
            android:orientation="vertical"
            android:background="@color/colorGrisClaro">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="20"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:weightSum="100"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/titulo_organizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="Organizacion"
                    android:textColor="@color/colorBlanco"
                    android:textSize="30dp"
                    app:fontFamily="@font/carter_one" />
                <ImageButton
                    android:id="@+id/edit_Organizacion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:gravity="left"
                    android:src="@drawable/ic_edit" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/canales"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="20"
                    android:layout_marginTop="10dp"
                    android:text="CANALES"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />
                <ImageButton
                    android:id="@+id/crear_canal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_add" />


            </LinearLayout>
            <ListView
                android:id="@+id/lista_canales"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@color/colorBlanco"
                android:cacheColorHint="#00000000"
                android:divider="@android:color/transparent"
                android:gravity="center"></ListView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="10"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/msj_privados"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="20"
                    android:layout_marginTop="10dp"
                    android:text="MENSAJES PRIVADOS"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp" />
                <ImageButton
                    android:id="@+id/crear_msj_privado"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_add" />


            </LinearLayout>

            <ListView
                android:id="@+id/lista_msj_privados"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:background="@color/colorBlanco"
                android:cacheColorHint="#00000000"
                android:divider="@android:color/transparent"
                android:gravity="center"></ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="10"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorPrimary" />
        </LinearLayout>


    </LinearLayout>




</RelativeLayout>