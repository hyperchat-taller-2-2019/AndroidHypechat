<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">



    <LinearLayout
        android:id="@+id/layout_ppal"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:weightSum="100"
        android:clickable="false"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo_integrantes_org"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Agrega miembros de la organizacion al canal"
            android:textColor="@color/colorAccent"
            android:textSize="25dp"
            app:fontFamily="@font/carter_one" />




        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_organizacion_usuarios_a_agregar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_weight="60"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"/>




        <Button
            android:id="@+id/button_finalizar_crear_canal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="10"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="Finalizar"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/background_dark"
            />





    </LinearLayout>



</LinearLayout>