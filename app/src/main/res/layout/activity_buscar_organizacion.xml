<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrganizacionesFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorNaranja" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorAzul" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="130dp">

                <EditText
                    android:id="@+id/textView3"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:text="ORGANIZACIONES"
                    android:textColor="@color/colorBar"
                    android:drawableLeft="@drawable/ic_search"
                    android:drawableTint="@color/colorGrisClaro"
                    android:background="@color/colorBlanco"
                    app:fontFamily="sans-serif-smallcaps"
                    android:textSize="20sp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="buscar"/>

            </LinearLayout>

            <TextView
                android:id="@+id/id_de_la_organizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="    No se encontraron resultados para esa busqueda"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="50dp"
                android:textSize="15sp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/id_buscar_organizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id de la organizacion"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                android:textColor="@color/colorAccent" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="100dp">

                <Button
                    android:id="@+id/boton_cancelar_buscar_Organizacion"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text= "Cancelar"
                    android:layout_gravity="center"
                    app:fontFamily="sans-serif-smallcaps"
                    android:textSize="20sp"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="20dp"
                    android:elevation="10dp"/>

                <Button
                    android:id="@+id/boton_ingresar_Organizacion"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:text= "Ingresar"
                    android:layout_gravity="center"
                    app:fontFamily="sans-serif-smallcaps"
                    android:textSize="20sp"
                    android:background="@color/colorNaranja"
                    android:layout_marginRight="20dp"
                    android:elevation="10dp"/>


            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorAccent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@color/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>